{
    "compilerOptions": {
        "composite": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@/components": ["src/components"],
            "@/hooks": ["src/hooks"],
            "@/theme": ["src/theme"],
            "@/utils": ["src/utils"],
            "@/types": ["src/types"],
            "@/layout": ["src/layout"],
            "@/pages": ["src/pages"]
        }
    },
    "include": ["vite.config.ts"]
}
